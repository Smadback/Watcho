<%# Rails flash messages styled for Zurb Foundation %>
<div class="row">
	<div class="medium-10 medium-centered columns">
		<% flash.each do |name, msg| %>
		  <% if msg.is_a?(String) %>
		  <br>
		    <div data-alert class="alert-box <%= name.to_s == 'notice' ? 'success' : 'alert' %>">
		      <%= content_tag :div, msg %>
		      <a href="#" class="close">&times;</a>
		    </div>
		  <% end %>
		<% end %>
	</div>
</div>
