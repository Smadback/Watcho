<div class="row">
	
  <div class="medium-2 columns">
  	<img src="http://placehold.it/150x200" style="float: left">
  	<div style=" text-align: center; font-size: 12px;">Edit profile picture</div>
  </div>
  
  <div class="medium-10 columns">
  	
    <%= form_for current_user do |form| %>

        <%= form.label :email %>
        <%= form.text_field :email %>

        <%= form.label :password %>
        <%= form.password_field :password %>

        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation %>

        <%= form.submit :class => 'button tiny'%>

    <% end %>
  </div>
</div>