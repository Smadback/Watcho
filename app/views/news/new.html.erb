<div class="row">
  <div class="medium-10 medium-centered columns">
    <h1>Create new news</h1>
  </div>
</div>

<div class="row">
  <div class="medium-10 medium-centered columns">
    
    <%= form_for @news do |form| %>

        <%= form.label :title %>
        <%= form.text_field :title %>

        <%= form.label :text %>
        <%= form.text_area :text %>
        
        <%= form.submit 'Create news', :class => 'button tiny' %>

    <% end %>
    
  </div>
</div>