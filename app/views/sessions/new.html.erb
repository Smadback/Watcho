<div class="row">
  <div class="medium-8 medium-centered columns panel callout">
    <%= form_tag sessions_path do %>

        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag "Log in", :class => 'button tiny' %>
 
    <% end %>
  </div>
</div>