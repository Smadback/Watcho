<div class="row">
  <div class="medium-10 medium-centered columns">
    <h1>Login</h1>
  </div>
</div>

<div class="row">
  <div class="medium-10 medium-centered columns">
    <%= form_tag sessions_path do %>

        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag "Log in", :class => 'button expand' %>

    <% end %>
  </div>
</div>
